<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:weightSum="0.34">

        <Button
            android:id="@+id/imageButton"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Service Enabled"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Home Address"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="@color/colorAccent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="0.34"
        android:layout_weight="0.34"
        >

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Keyword"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="@color/common_google_signin_btn_text_light_focused" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Customise Message"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:weightSum="0.33"
        android:layout_weight="0.33"
        >

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="History"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="@color/wallet_link_text_light" />

        <Button
            android:id="@+id/imageButton5"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Tutorial"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:background="?android:attr/colorPressedHighlight" />
    </LinearLayout>
</LinearLayout>