<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/serviceEnabled_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            style="@style/basic"
        >
            <ImageView
                android:id="@+id/serviceEnabled_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/service_enabled"
                style = "@style/basic_iv"
                />
            <TextView
                android:id="@+id/serviceEnabled_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_enabled"
                style="@style/basic_tv"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeAddress_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shape"
            style="@style/basic"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_address"
                style="@style/basic_iv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_address"
                style="@style/basic_tv"
                />
        </LinearLayout>
    </LinearLayout>
<!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/keyword_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/common_google_signin_btn_text_light_focused"
            style="@style/basic"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/keyword"
                style = "@style/basic_iv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyword"
                style="@style/basic_tv"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customiseMessage_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            style="@style/basic"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customise_message"
                style = "@style/basic_iv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customise_message"
                style="@style/basic_tv"
                />
        </LinearLayout>
    </LinearLayout>

<!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/history_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/wallet_link_text_light"
            style="@style/basic"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/history"
                style = "@style/basic_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history"
                style="@style/basic_tv"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tutorial_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/colorPressedHighlight"
            style="@style/basic"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tutorial"
                style = "@style/basic_iv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial"
                style="@style/basic_tv"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>