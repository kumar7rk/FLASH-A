<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/serviceB"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="Service Enabled"
            android:textColor="@color/pugnotification_color_white"
            android:textAllCaps="false"

            android:padding="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"

            android:background="@android:color/darker_gray"

            android:drawableStart="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/home_addressB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Home Address"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/mr_media_play_light"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/keywordB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Keyword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/customise_messageB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Customise Message"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/historyB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="History"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:background="@color/wallet_link_text_light"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/tutorialB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tutorial"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:background="?android:attr/colorPressedHighlight"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>